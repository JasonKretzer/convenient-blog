<h1>My Blog</h1>

<% @blog_posts.each do |post| %>
  <div class="border-solid border-2 border-gray-200 rounded-md py-2 px-3 my-5">
    <%= image_tag(post.cover_image, class: "my-0") if post.cover_image.present? %>
    <h2><%= link_to post.title, post %></h2>
    <%= post.content %>
    <% if post.draft? %>
      <div class="p-2 rounded bg-gray-100 text-gray-900">Draft</div>
    <% elsif post.scheduled? %>
      <div class="p-2 rounded bg-blue-100 text-blue-900">Scheduled</div>
    <% end %>
  </div>
<% end %>
<% if @pagy.count > @pagy.items %>
  <div class="flex justify-center items-center mt-10">
    <%== pagy_nav(@pagy) %>
  </div>
<% end %>
